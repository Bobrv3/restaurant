<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Restaurant</display-name>

  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources.local</param-value>
  </context-param>

  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>com.epam.restaurant.controller.RestaurantController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/restaurant</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AuthorizationPage</servlet-name>
    <jsp-file>/WEB-INF/jsp/AuthorizationPage.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthorizationPage</servlet-name>
    <url-pattern>/authorizationPage</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegistrationPage</servlet-name>
    <jsp-file>/WEB-INF/jsp/RegistrationPage.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationPage</servlet-name>
    <url-pattern>/registrationPage</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ErrorPage</servlet-name>
    <jsp-file>/WEB-INF/jsp/Error.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ErrorPage</servlet-name>
    <url-pattern>/errorPage</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Menu</servlet-name>
    <servlet-class>com.epam.restaurant.bean.Menu</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Menu</servlet-name>
    <url-pattern>/menu</url-pattern>
  </servlet-mapping>

</web-app>